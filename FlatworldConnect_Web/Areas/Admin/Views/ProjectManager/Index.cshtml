@model IEnumerable<ProjectManager>
@{
    ViewData["Title"] = "Index";
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Project Manager List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ProjectManager" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp Add Project Manager
            </a>
        </div>
    </div>
    <br />
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Project Manager Name
            </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
            <th>
                Address
            </th>
            <th>
                Location
            </th>
            <th>
                State
            </th>
            <th>
                Zip Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="120px">
                    @obj.PMName
                </td>
                <td width="150px">
                    @obj.PMEmail
                </td>
                <td width="100px">
                    @obj.PMPhone
                </td>
                <td width="180px">
                    @obj.PMAddress
                </td>
                <td width="120px">
                    @obj.PMLocation
                </td>
                    <td width="180px">
                        @obj.PMState
                    </td>
                    <td width="120px">
                        @obj.PMZipCode
                    </td>
                <td width="75px">
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="ProjectManager" asp-action="Edit" asp-route-id="@obj.PMId" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>Edit</a>
                            <a asp-controller="ProjectManager" asp-action="Delete" asp-route-id="@obj.PMId" class="btn btn-danger mx-2"><i class="bi bi-x-lg"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>