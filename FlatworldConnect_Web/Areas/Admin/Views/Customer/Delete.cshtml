@model Customer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" asp-action="Delete">
    <input asp-for="customerId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete customer</h2>
            <hr />
        </div>
        @Html.HiddenFor(m => m.customerId)
        <div class="mb-3">
            <label asp-for="customerName">Name</label>
            <input asp-for="customerName" class="form-control" disabled placeholder="E.g. Joe Smith"/>
        </div>
        <div class="mb-3">
            <label asp-for="customerEmail">Email</label>
            <input asp-for="customerEmail" class="form-control" disabled placeholder="someone@example.com"/>
        </div>
        <div class="mb-3">
            <label asp-for="customerPhone">Phone</label>
            <input asp-for="customerPhone" class="form-control" disabled placeholder="9876543210" />
        </div>
        <div class="mb-3">
            <label asp-for="customerAddress">Address</label>
            <input asp-for="customerAddress" class="form-control" disabled placeholder="House no., street, area" />
        </div>
        <div class="mb-3">
            <label asp-for="customerLocation">Location</label>
            <input asp-for="customerLocation" class="form-control" disabled placeholder="City" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back
        </a>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
