@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp Add customer
            </a>
        </div>
    </div>
    <br />
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Address
            </th>
            <th>
                Location
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="120px">
                    @obj.customerName
                </td>
                <td width="150px">
                    @obj.customerAddress
                </td>
                <td width="100px">
                    @obj.customerLocation
                </td>
                <td width="180px">
                    @obj.customerEmail
                </td>
                <td width="120px">
                    @obj.customerPhone
                </td>
                <td width="75px">
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@obj.customerId" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>Edit</a>
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.customerId" class="btn btn-danger mx-2"><i class="bi bi-x-lg"></i>Delete</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>