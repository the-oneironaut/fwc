@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Resource List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Resource" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp Add Resource
            </a>
        </div>
    </div>
    <br />
    <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Customer
                </th>
                <th>
                    Job Title
                </th>
                <th>
                    Skill Set
                </th>
                <th>
                    Experience
                </th>
                <th>
                    Number of Months
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Number of Resources
                </th>
                
                <th></th>
                
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts{
    <script src="~/js/resource.js"></script>
}